package com.claim;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Please select an option from the folowing menu: ");
		System.out.println("(1) Add New Record");
		System.out.println("(2) Find Record");
		System.out.println("(3) Delete Record");
		System.out.println("(4) Exit");
		int choice = sc.nextInt();
		
		if(choice == 1) {
			addRecord();
		}
	}

//	public String addRecord(String firstName, String middleInitial, String lastName, String houseNumber, String street,
//			String city, String state, String zip, String phoneNumber) {
